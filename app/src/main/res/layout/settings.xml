<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@android:color/background_light"
              android:orientation="vertical">

    <com.membattle.WidgetPlus.TextViewPlus
        android:id="@+id/settitle"
        tools:text="Правила игры"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:text="Настройки"
        android:textAlignment="center"
        app:customFont="@string/font_title"

        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/memblue"
        android:textSize="30sp"/>

    <com.membattle.WidgetPlus.TextViewPlus
        android:id="@+id/setout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoText="false"
        android:background="@drawable/bottom_line"
        android:padding="12dp"
        app:customFont="@string/font_main"

        android:text="Выйти из аккаунта"
        android:textSize="24sp"/>

    <com.membattle.WidgetPlus.TextViewPlus
        android:id="@+id/aboutv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoText="false"
        android:background="@drawable/bottom_line"
        android:padding="12dp"
        android:text="Что нового в версии 2.0?"
        android:textSize="24sp"
        app:customFont="@string/font_main"/>

    <com.membattle.WidgetPlus.TextViewPlus
        android:id="@+id/setmark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoText="false"
        android:background="@drawable/bottom_line"
        android:padding="12dp"
        android:text="Оценить нас в Google Play"

        android:textSize="24sp"
        app:customFont="@string/font_main"/>

    <com.membattle.WidgetPlus.TextViewPlus
        android:id="@+id/setshare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoText="false"
        android:background="@drawable/bottom_line"
        android:padding="12dp"
        android:text="Рассказать друзьям"

        android:textSize="24sp"
        app:customFont="@string/font_main"/>

</LinearLayout>