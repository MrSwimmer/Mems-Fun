<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/circle_menu_center_button_color_pressed"
                android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/battle_clockim"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                app:srcCompat="@drawable/hourglass"/>

            <com.membattle.WidgetPlus.TextViewPlus
                android:id="@+id/textcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                android:text="7"
                app:customFont="@string/font_main"
                android:textColor="@color/memblue"
                android:textSize="22sp"/>

            <Chronometer
                android:id="@+id/battlechrono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textAlignment="center"
                android:textColor="@color/memblue"
                android:textSize="8sp"
                android:visibility="invisible"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="338dp"
            android:layout_height="218dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/battlefirstim"
                android:layout_width="338dp"
                android:layout_height="218dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/bb"/>

            <ImageView
                android:id="@+id/battle_likeonf"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:visibility="invisible"
                app:srcCompat="@drawable/onimagelike"/>

            <RelativeLayout
                android:id="@+id/battle_after_first"
                android:layout_width="338dp"
                android:layout_height="218dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/back_likes"
                android:visibility="invisible">

                <com.membattle.WidgetPlus.TextViewPlus
                    android:id="@+id/battle_after_winner_first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Победитель"
                    app:customFont="@string/font_main"
                    android:textColor="@android:color/white"
                    android:textSize="30sp"/>

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/battle_after_winner_first"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <com.membattle.WidgetPlus.TextViewPlus
                        android:id="@+id/battle_after_likes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:customFont="@string/font_main"
                        android:layout_marginRight="5dp"
                        android:text="33"
                        android:textColor="@android:color/white"
                        android:textSize="24sp"/>

                    <ImageView
                        android:id="@+id/battle_imlikef"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_like"/>
                </LinearLayout>

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="visible">

            <ImageView
                android:id="@+id/battlesecondtim"
                android:layout_width="338dp"
                android:layout_height="218dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/bb"/>

            <ImageView
                android:id="@+id/battle_likeons"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:visibility="invisible"
                app:srcCompat="@drawable/onimagelike"/>

            <RelativeLayout
                android:id="@+id/battle_after_second"
                android:layout_width="338dp"
                android:layout_height="218dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"

                android:layout_alignParentTop="true"
                android:background="@color/back_likes"
                android:visibility="invisible">

                <com.membattle.WidgetPlus.TextViewPlus
                    android:id="@+id/battle_after_winner_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Победитель"
                    app:customFont="@string/font_main"
                    android:textColor="@android:color/white"
                    android:textSize="30sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/battle_after_winner_second"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="33dp"
                    android:orientation="horizontal">

                    <com.membattle.WidgetPlus.TextViewPlus
                        android:id="@+id/battle_after_likes2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:text="33"
                        app:customFont="@string/font_main"
                        android:textColor="@android:color/white"
                        android:textSize="24sp"/>

                    <ImageView
                        android:id="@+id/battle_imlikes"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_like"/>
                </LinearLayout>

            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>